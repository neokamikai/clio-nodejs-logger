    "@types/lodash": "^4.14.168",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@types/prettyjson": "^0.0.29",
    "@types/sinon": "^9.0.10",
    "esdoc": "^1.0.4",
